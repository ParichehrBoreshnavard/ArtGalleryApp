@using ArtGalleryApp.Models.DataViewModel;

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

@model List<ArtGalleryApp.Models.DataViewModel.SubEvent_UpdateViewModel>

<div class="container w-100 d-flex flex-nowrap justify-content-center pt-5 pb-5  AdminBg  ">
    <div class="Carouselcontainer  w-90 h-90 bg-white  p-5 ">
        <div class="admin-table-header d-flex  flex-nowrap justify-content-space-between">
            <div class=" mb-3 mt-3 mt-md-0 mb-md-0">
                <h4>SubEvent Table</h4>
            </div>
        </div>
        <a style="background-color: #193C8D" class="btn btn-success" asp-controller="SubEvent" asp-action="New">Add SubEvent</a>

        <table class="table table-striped Team">
            <thead>
                <tr>
                    <td>Title</td>
                    <td>StartDate</td>
                    <td>EndDate</td>
                    <td>Event</td>
                    <td>Image</td>

                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (SubEvent_UpdateViewModel row in Model)
                {
                    <tr>

                        <td>@row.Title</td>
                        <td>@row.StartDate</td>
                        <td>@row.EndDate</td>
                        <td>@row.eventTitle</td>
                        <td><img src="@row.ImgUrl" style="width:40px" /></td>
                    
                        
                        
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Update" asp-controller="SubEvent" asp-route-id="@row.Id">Update</a>
                            <a class="btn btn-danger btn-sm" onclick="if(!confirm('Are you sure to remove this record?'))return false;" asp-action="Delete" asp-controller="SubEvent" asp-route-id="@row.Id">Delete</a>

                     
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

