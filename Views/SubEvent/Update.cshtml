@{
    ViewData["Title"] = "New";
    Layout = "_LayoutAdmin";
}

@model ArtGalleryApp.Models.DataViewModel.SubEvent_UpdateViewModel

<div class="container w-100 d-flex flex-nowrap justify-content-center pt-5 pb-5   AdminBg   ">
    <div class="Carouselcontainer w-90 h-90 bg-white  p-3 d-flex">
        <form class="register-form ml-2 form-check " asp-action="Update"
              asp-controller="SubEvent"
              method="post" enctype="multipart/form-data">
            <h3>Update Informations</h3>
            <div class="row">
                <div class="col-md-6">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input class="form-control" asp-for="Title" placeholder="Enter event name...">
                        <span style="color:darkred" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate"></label>
                        <input class="form-control" asp-for="StartDate" placeholder="Enter event start date...">
                        <span style="color:darkred" asp-validation-for="StartDate"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate"></label>
                        <input class="form-control" asp-for="EndDate" placeholder="Enter the event end date...">
                        <span style="color:darkred" asp-validation-for="EndDate"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea rows="3" class="form-control" asp-for="Description" placeholder="Enter event about description..."></textarea>
                        <span style="color:darkred" asp-validation-for="Description"></span>
                    </div>



                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="eventId"></label>
                        <select asp-for="eventId" asp-items="@(new SelectList(Model.lst_events,"Id","Title"))" class="form-control">
                            <option value="">select Event</option>
                        </select>
                        <span style="color:darkred" asp-validation-for="eventId"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UrlTicketStore"></label>
                        <input class="form-control" asp-for="UrlTicketStore" placeholder="Enter event ticketStore website address...">
                        <span style="color:darkred" asp-validation-for="UrlTicketStore"></span>
                    </div>
                    <div class="position-relative">

                        <div class="form-group">
                            <label asp-for="UploadImgUrl"></label>
                            <input class="form-control-file" asp-for="UploadImgUrl">
                            <span style="color:darkred" asp-validation-for="UploadImgUrl"></span>
                            <span style="color:darkred">@Model.ErrorMessagePage</span>

                        </div>
                        <img class="w-100 position-relative" src="@Model.ImgUrl" />



                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}