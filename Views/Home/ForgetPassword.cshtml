@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ArtGalleryApp.Models.DataViewModel.SigninViewModel




<div class="container w-100 d-flex flex-nowrap justify-content-center pt-5 pb-5  homeSliderBg  ">
    <div class="Carouselcontainer w-30 h-30 bg-white p-5">
        <form class="signin-form form-check w-80 ml-5 ">

            <h3 class="mb-5">Password Recovery</h3>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email" required>
                <small id="emailHelp" class="form-text text-muted mt-5 mb-5">We'll send a password reset link to this email.</small>
            </div>
            <div class="form-group">
                <div class="g-recaptcha" data-sitekey="your_site_key"></div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>

