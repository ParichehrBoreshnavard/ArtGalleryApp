
@{
    Layout = "_Layout";
    ViewData["Title"] = "Contact Us";
}



<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

@model ArtGalleryApp.Models.DataViewModel.ContactViewModel
  <div class="container-fluid contactBody opacity-75 " >
    <section id="contact" class="content-section text-center">
        <div class="contact-section">
            <div class="container ourcontact">
                <h2>Contact Us</h2>
                <p>Feel free to shout us by feeling the contact form or visiting our social network sites like Fackebook,Whatsapp,Twitter.</p>
           <div class="row">
                    <div class="col-md-8 col-md-offset-2 formContainer">
                        <form class="form-horizontal" asp-controller="home" asp-action="Contact" method="post">
                            <div class="form-group">
                                <label asp-for="Name" class="contactLabel"></label>
                                <input class="form-control" asp-for="Name"  placeholder="Jane Doe">
                                <span style="color:darkred" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="contactLabel"></label>
                                <input  class="form-control" asp-for="Email" placeholder="jane.doe@example.com">
                                <span style="color:darkred" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Subject" class="contactLabel"></label>
                                <input  class="form-control" asp-for="Subject" >
                                <span style="color:darkred" asp-validation-for="Subject"></span>
                            </div>
                            <div class="form-group ">
                                <label asp-for="Body" class="contactLabel"></label>
                                <textarea class="form-control" asp-for="Body"  placeholder="Description"></textarea>
                                <span style="color:darkred" asp-validation-for="Body"></span>
                            </div>
                            <button type="submit" class="btn btn-default submitBtn" asp-action="Contact" asp-controller="Home">Send Message</button>
                        </form>

                        <hr>
                        <h3>Our Social Sites</h3>
                        <ul class="list-inline banner-social-buttons" style="display:inline-flex;padding-right: 5px;padding-left: 5px;">
                            <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-twitter"> <span class="network-name">Twitter</span></i></a></li>
                            <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-facebook"> <span class="network-name">Facebook</span></i></a></li>
                            <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-youtube-play"> <span class="network-name">Youtube</span></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

 
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}