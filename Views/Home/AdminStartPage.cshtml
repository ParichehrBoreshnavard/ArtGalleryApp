
@{
    ViewData["Title"] = "AdminStartPage";
    Layout = "_LayoutAdminStart";
}


@model ArtGalleryApp.Models.DataViewModel.SigninViewModel

<div class="container w-100 d-flex flex-nowrap justify-content-center pt-5 pb-5   AdminBg   ">
    <div class="Carouselcontainer w-40 h-40 bg-white  p-5 ">
        <div class="container">
            <h2>Login</h2>
            <form>
                 
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Enter email" name="email">
                    <span style="color:darkred" asp-validation-for="Email"></span>
                </div>

                 <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" class="form-control" asp-for="Password" placeholder="Enter password...">
                        <span style="color:darkred" asp-validation-for="Password"></span>
                    </div>
                  
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="remember"> Remember me
                    </label>
                </div>
                <div class="form-group d-flex have-account">
                <div class="form-group">
                    <h6 >forget your password?</H6>
                    <a   asp-controller="home" asp-action="ForgetPassword"></a>
                </div>
                 </div>
                <button type="submit" class="btn btn-primary" href="Dashboard">Submit</button>
            </form>
        </div>
    </div>
</div>



