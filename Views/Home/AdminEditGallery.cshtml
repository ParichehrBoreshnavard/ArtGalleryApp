
@{
    ViewData["Title"] = "AdminEditGallery";
    Layout = "_LayoutAdmin";
}

@model ArtGalleryApp.Models.DataViewModel.UploadFileViewModel

<div class="container w-100 d-flex flex-nowrap justify-content-center pt-5 pb-5   AdminBg   ">
    <div class="Carouselcontainer w-90 h-90 bg-white  p-5 d-flex">
        <form class="register-form ml-2 form-check "  asp-controller="home" asp-action="/home/AdminEditGallery" method="post">
            <h3>Update Informations</h3>
            <div class="row">
                <th>Name</th>
                <th>Artist Name</th>
                <th>Year</th>       
                <th>Field</th>      
                <th>medium</th>     
                <th>Style</th>      
                <th>Size</th>       
                <th>Price</th>
                <th>Availability</th>
                <th>Add Date</th>
                <th>Sold Date</th>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Enter the artwork name...">
                        <span style="color:darkred" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Artist_"></label>
                        <input type="text" class="form-control" asp-for="Artist_" placeholder="Enter The artist name name...">
                        <span style="color:darkred" asp-validation-for="Artist_"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProduceDate"></label>
                        <input type="text" class="form-control" asp-for="ProduceDate" placeholder="Enter your produce date...">
                        <span style="color:darkred" asp-validation-for="ProduceDate"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ArtworkField_"></label>
                            <input type="text" class="form-control" asp-for="ArtworkField_" placeholder="Enter The feild...">
                        <span style="color:darkred" validation-for="Field-"></span>
                    </div>
                    <div class="form-group">
                        <label for="Medium-"></label>
                        <input type="text" class="form-control" for="Medium-" placeholder="Enter the Medium...">
                        <span style="color:darkred" validation-for="Medium-"></span>
                    </div>
                     <div class="form-group">
                        <label for="Style-"></label>
                        <input type="text" class="form-control" for="Style-" placeholder="Enter the artwork Style...">
                        <span style="color:darkred"validation-for="Style-"></span>
                    </div>

                </div>
                <div class="col-md-4 position-relative">
                   
                    <div class="form-group">
                        <label for="Size-"></label>
                        <input type="text" class="form-control" for="Size-" placeholder="Enter the artwork size...">
                        <span style="color:darkred" validation-for="Size-"></span>
                    </div>
                    <div class="form-group">
                        <label for="Price-"></label>
                        <input class="form-control" for="Price-" placeholder="Enter price...">
                        <span style="color:darkred" validation-for="Price-"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UploadDate"></label>
                        <input type="password" class="form-control" asp-for="UploadDate" placeholder="upload date...">
                        <span style="color:darkred" asp-validation-for="UploadDate"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PublishDate"></label>
                        <input type="password" class="form-control" asp-for="PublishDate" placeholder="publish date...">
                        <span style="color:darkred" asp-validation-for="PublishDate"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SoldDate"></label>
                        <input type="password" class="form-control" asp-for="SoldDate" placeholder="sold date...">
                        <span style="color:darkred" asp-validation-for="SoldDate"></span>
                    </div>
                </div>
                <div class="col-md-4 position-relative">
                    <div class="form-group">
                        <label asp-for="ImgUrl">Upload a Photo</label>
                        <input type="file" class="form-control-file" asp-for="ImgUrl">
                        <span style="color:darkred" asp-validation-for="ImgUrl"></span>
                    </div>
                    <img class="w-100 position-relative" src="~/images/blog/pexels-marshall-jones-3652853.jpg" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                <span style="color:darkred" asp-validation-for="Description"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

