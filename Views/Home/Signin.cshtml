
@{
    ViewData["Title"] = "Signin";
    Layout = "_Layout";
}

@model ArtGalleryApp.Models.DataViewModel.SigninViewModel

<div class="container w-100 d-flex flex-nowrap justify-content-center pt-5 pb-5  homeSliderBg  ">
    <div class="Carouselcontainer w-30 h-30 bg-white p-5">
        <form class="signin-form form-check w-80 ml-5 ">
            <h3>log in</h3>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" placeholder="Enter email...">
                <span style="color:darkred" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input  class="form-control" asp-for="Password" placeholder="Enter password...">
                <span style="color:darkred" asp-validation-for="Password"></span>
            </div>

            <div class="signup-bottom-container text-center">
                <div class="form-group d-flex have-account">
                    <a  class="sign-in-link" asp-action="ForgetPassword">forget your password?</a>
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
                <div class="form-group d-flex have-account">
                    <h6>don't have accoount?</h6>
                    <a asp-controller="Home" asp-action="Signup" class="sign-in-link">Sign up</a>
                </div>
                <label for="CreatAccountWith">..............................or sign in with..............................</label>
                <div class="form-group sign-in-with">
                    <a href="#" class="btn btn-danger">Google</a>
                    <a href="#" class="btn btn-primary">Facebook</a>
                    <a href="#" class="btn btn-secondary">linkedin</a>
                </div>
                <div class="row d-flex  flex-nowrap justify-content-space-between">
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="remember"> Remember me </label>
                </div>
                <div class="form-group d-flex have-account">
                    <h6>need help?</h6>
                    <a asp-action="Contact" class="sign-in-link">contact us</a>
                </div>
                </div>
            </div>
        </form>
    </div>
</div>

