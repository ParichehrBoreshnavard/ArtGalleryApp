@{
    ViewData["Title"] = "Dashboard";
    Layout = "_LayoutAdmin";
}


@model ArtGalleryApp.Models.DataViewModel.SigninViewModel

<H1 class="pt-5">Welcome Admin</H1>

<div class="container pt-5">
</div>
<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <div class="container">
                        <div class="container">
                            <h2>Today's Events</h2>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Time</th>
                                        <th>Event</th>
                                        <th>Place</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>10:00 AM</td>
                                        <td>Meeting with team</td>
                                        <td>Conference Room A</td>
                                    </tr>
                                    <tr>
                                        <td>1:00 PM</td>
                                        <td>Lunch with colleagues</td>
                                        <td>Cafeteria</td>
                                    </tr>
                                    <tr>
                                        <td>3:00 PM</td>
                                        <td>Presentation to clients</td>
                                        <td>Conference Room B</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>

                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <div class="container">
                        <h2>New Messages</h2>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Sender</th>
                                    <th>Read</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="messageList">
                                <tr>
                                    <td>2022-10-01</td>
                                    <td>08:30 AM</td>
                                    <td>John Doe</td>
                                    <td><input type="checkbox"></td>
                                    <td>
                                        <button class="btn btn-danger" onclick="deleteMessage(this)">Delete</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2022-10-01</td>
                                    <td>11:15 AM</td>
                                    <td>Jane Smith</td>
                                    <td><input type="checkbox"></td>
                                    <td>
                                        <button class="btn btn-danger" onclick="deleteMessage(this)">Delete</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2022-10-01</td>
                                    <td>02:00 PM</td>
                                    <td>Bob Johnson</td>
                                    <td><input type="checkbox"></td>
                                    <td>
                                        <button class="btn btn-danger" onclick="deleteMessage(this)">Delete</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <button class="btn btn-primary" onclick="saveChanges()">Save Changes</button>
                    </div>

                    <script>
                        function deleteMessage(elem) {
                            elem.parentNode.parentNode.remove();
                        }

                        function saveChanges() {
                            // Code to save changes to the message list, such as updating a database
                        }
                    </script>

                    <div class="divider mt-5 mb-5 border-bottom border-secondary"></div>

                    <div class="container">
                        <h1>To Do list</h1>
                        <ul id="reminder-list" class="list-group">
                            <!-- List items will be added here dynamically -->
                        </ul>
                        <br>
                        <form>
                            <div class="form-group">
                                <label for="new-reminder">Add a new reminder:</label>
                                <input type="text" class="form-control" id="new-reminder">
                            </div>
                            <button type="button" class="btn btn-primary" id="add-reminder">Add</button>
                        </form>
                    </div>
                    <script>
                        // Add click event to the "Add" button
                        document.querySelector("#add-reminder").addEventListener("click", function () {
                            // Get the value of the input field
                            let newReminder = document.querySelector("#new-reminder").value;

                            // Create a new list item
                            let newLi = document.createElement("li");
                            newLi.classList.add("list-group-item");
                            newLi.innerHTML = newReminder;

                            // Create a new checkbox
                            let newCheckbox = document.createElement("input");
                            newCheckbox.type = "checkbox";
                            newCheckbox.classList.add("float-right");
                            newCheckbox.addEventListener("click", function () {
                                if (this.checked) {
                                    newLi.style.textDecoration = "line-through";
                                } else {
                                    newLi.style.textDecoration = "none";
                                }
                            });

                            // Append the checkbox to the list item
                            newLi.appendChild(newCheckbox);

                            // Append the list item to the reminder list
                            document.querySelector("#reminder-list").appendChild(newLi);
                        });
                    </script>

                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <div class="container">
                        <h3>Today's Report</h3>
                        <form>
                            <div class="form-group">
                                <label for="orders">Orders</label>
                                <input type="number" class="form-control" id="orders" required>
                            </div>
                            <div class="form-group">
                                <label for="sales">Sales</label>
                                <input type="number" class="form-control" id="sales" required>
                            </div>
                            <div class="form-group">
                                <label for="notes">Notes</label>
                                <textarea class="form-control" id="notes" rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary" onclick="submitReport()">Submit Report</button>
                        </form>
                    </div>

                    <script>
                        function submitReport() {
                            var orders = document.getElementById("orders").value;
                            var sales = document.getElementById("sales").value;
                            var notes = document.getElementById("notes").value;

                            console.log("Orders: " + orders);
                            console.log("Sales: " + sales);
                            console.log("Notes: " + notes);
                            /*
                            You can also send the data to the server using ajax, fetch or xhr to save or process the data
                            */
                        }
                    </script>

                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <div class="container">
                        <h3>Set Reminder</h3>
                        <form>
                            <div class="form-group">
                                <label for="reminderTime">Reminder Time</label>
                                <input type="time" class="form-control" id="reminderTime" required>
                            </div>
                            <div class="form-group">
                                <label for="reminderMessage">Reminder Message</label>
                                <textarea class="form-control" id="reminderMessage" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary" onclick="setReminder()">Set Reminder</button>
                        </form>
                    </div>

                    <script>
                        function setReminder() {
                            var reminderTime = document.getElementById("reminderTime").value;
                            var reminderMessage = document.getElementById("reminderMessage").value;

                            var currentTime = new Date();
                            var reminderDate = new Date();
                            reminderDate.setHours(reminderTime.substring(0, 2));
                            reminderDate.setMinutes(reminderTime.substring(3, 5));
                            reminderDate.setSeconds(0);

                            var timeUntilReminder = reminderDate - currentTime;

                            if (timeUntilReminder < 0) {
                                alert("Please enter a valid time that is in the future.");
                            } else {
                                setTimeout(function () {
                                    alert(reminderMessage);
                                }, timeUntilReminder);
                            }
                        }
                    </script>

                </div>
            </div>
        </div>

    </div>
</div>
