@{
    ViewData["Title"] = "Artwork Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ArtGalleryApp.Models.DataViewModel.SiteGalleryViewModel
<div id="ABOUT" class="container-fluid bg-black  ">
    <section class="p-5" style="padding-top:0">
        @*<a href="ArtistPage" style="text-decoration:none">BACK</a><br /><br />*@
        <h2 class="artistsTitle text-white">ARTWORK PAGE</h2>
        <div class="container w-100 h-100 bg-black mt-3">

            <div class="card mb-3" style="max-width: 100%;border:none">

                <div class="row g-0 bg-black pl-6">
                    <div class="col-md-6">
                        <div class="card-body pt-0 mt-5">
                            <h4 class="card-title artistsTitleCard">Artwork Name: @Model.gallery.Title</h4>
                            <h6 class="card-title artistsTitleCard">Produce Year: @Model.gallery.ProduceDate.Year</h6>
                            <h6 class="card-title artistsTitleCard">Artist”s Name: @Model.gallery.Artist</h6>
                            <h6 class="card-title artistsTitleCard">Field: @Model.gallery.ArtworkFieldName</h6>
                            <h6 class="card-title artistsTitleCard">Style: @Model.gallery.StyleName</h6>
                            <h6 class="card-title artistsTitleCard">Medium: @Model.gallery.MediumName</h6>
                            <h6 class="card-title artistsTitleCard">Size: @Model.gallery.Size</h6><br />
                            <div class="col-md-12 p-4 w-75" style="bottom:15px; margin-top:30px; margin-bottom:20px; color:white; border:0.5px solid white">
                                <p class="card-text" style="text-align:justify">
                                    @Model.gallery.Description
                                </p>
                                @*<p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>*@
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6 ">
                        <img src="@Model.gallery.ImgUrl" class="img-fluid rounded-start mt-5" alt="..." style="border:1px white solid">
                        <div class="col-md-6 " style="display:flex;justify-content:space-between;align-items: flex-end;">
                            <h6 class="card-title artistsTitleCard mt-3">Price: @Model.gallery.Price $</h6>
                            @if (Model.gallery.Inventory != null && Model.gallery.Inventory > 0)
                            {
                                <form asp-controller="Home" asp-action="ArtworkPage" asp-route-id="@Model.gallery.Id" method="post">
                                    <button name="btn" value="addCart" style="float:right;
                                color: white;
                                border: 1px solid white;
                                padding: 6px 50px;" class="btn">
                                        add to card
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
