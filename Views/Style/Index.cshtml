@using ArtGalleryApp.Models.DataViewModel;

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}
@model ArtGalleryApp.Models.DataViewModel.StyleViewModel
<div class="container  AdminBg  ">
    <div class="container  w-50 bg-white p-5 mt-5 mb-5">
        <h1 class="text-center">Art Style Collection</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="art-style-list">
                @foreach(var row in Model.lstStyle)
                {
                    <tr>
                        <td>@row.Name</td>
                        <td><a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Style" asp-route-id="@row.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <form method="post" asp-controller="style" asp-action="index">
            <div class="form-group">
                <input class="form-control" asp-for="Name" placeholder="Add a new art style">
                <span style="color:darkred" asp-validation-for="Name"></span>

            </div>
            <button type="submit" class="btn btn-primary float-end" id="add-style-btn">Add</button>
        </form>
    </div>

</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}
