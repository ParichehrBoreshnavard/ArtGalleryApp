@using ArtGalleryApp.Models.DataViewModel;
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

@model List<ArtGalleryApp.Models.DataViewModel.ContactViewModel>

<div class="container w-100 d-flex flex-nowrap justify-content-center pt-5 pb-5  AdminBg  ">
    <div class="Carouselcontainer  w-90 h-90 bg-white  p-5 ">
        <div class="admin-table-header d-flex  flex-nowrap justify-content-space-between">
            <div class=" mb-3 mt-3 mt-md-0 mb-md-0">
                <h4>Contacts Table</h4>
            </div>

        </div>


        <table class="table table-striped Team">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Body</th>
                    <th>Response</th>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>

                @foreach(var row in Model){

                <tr>

                    <td>@row.Name</td>
                    <td>@row.Email</td>
                    <td>@row.Subject</td>
                    <td>@row.Body</td>
                    <th>@row.Response</th>
                    <td>
                        <a style="background-color: #193C8D" class="btn btn-success" asp-controller="Cantact" asp-action="New">Response</a>
                        <a class="btn btn-danger btn-sm" asp-action="delete"  asp-controller="Contact" asp-route-id="@row.Id">Delete</a>
                    </td>
                </tr>
                }

            </tbody>

        </table>

    </div>
</div>

