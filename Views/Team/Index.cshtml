@using ArtGalleryApp.Models.DataViewModel;
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}
@model ArtGalleryApp.Models.DataViewModel.TeamViewModel
<div class="container  AdminBg  ">
    <div class="container  w-50 bg-white p-5 mt-5 mb-5">
        <h2 class="text-center">Team Member Collection</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Team Member</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="art-artworkField-list">
                @foreach (var row in Model.lstTeam)
                {
                    <tr>
                        <td>@row.ArtistName</td>
                        <td><a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Team" asp-route-id="@row.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <form method="post" asp-controller="Team" asp-action="index">
            <div class="form-group">

                <select required asp-for="ArtistId" asp-items="@(new SelectList(Model.lstArtist,"Id","Name"))" class="form-control">
                    <option value="">select Team Member</option>
                </select>
                <span style="color:darkred" asp-validation-for="ArtistId"></span>

            </div>
            <button type="submit" class="btn btn-primary float-end" id="add-artworkField-btn">Add</button>
        </form>
    </div>

</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

